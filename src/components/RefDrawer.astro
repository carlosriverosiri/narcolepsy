---
// src/components/RefDrawer.astro
interface Props {
  lang?: 'sv' | 'en';
}

const { lang = 'en' } = Astro.props;

// Translations
const t = {
  sv: {
    source: 'Källa',
    close: 'Stäng',
    readStudy: 'Läs hela studien'
  },
  en: {
    source: 'Source',
    close: 'Close',
    readStudy: 'Read the full study'
  }
};

const labels = t[lang];
---

<div id="ref-drawer-backdrop" class="backdrop hidden"></div>
<aside id="ref-drawer" class="drawer hidden" aria-hidden="true">
  <div class="drawer-header">
    <span class="drawer-title">{labels.source}</span>
    <button id="close-drawer" aria-label={labels.close}>✕</button>
  </div>
  <div class="drawer-content">
    <p id="drawer-text"></p>
    <a id="drawer-link" href="#" target="_blank" rel="noopener noreferrer" class="external-link">{labels.readStudy} &rarr;</a>
  </div>
</aside>

<script>
  // Runs on client
  const triggers = document.querySelectorAll('.ref-trigger');
  const drawer = document.getElementById('ref-drawer');
  const backdrop = document.getElementById('ref-drawer-backdrop');
  const closeBtn = document.getElementById('close-drawer');
  const textEl = document.getElementById('drawer-text');
  const linkEl = document.getElementById('drawer-link');

  function openDrawer(dataset) {
    textEl.textContent = dataset.text;
    if (dataset.url) {
        linkEl.href = dataset.url;
        linkEl.style.display = 'inline-block';
    } else {
        linkEl.style.display = 'none';
    }
    
    drawer.classList.remove('hidden');
    backdrop.classList.remove('hidden');
    // Small delay for CSS transition
    requestAnimationFrame(() => {
      drawer.classList.add('open');
      backdrop.classList.add('open');
    });
  }

  function closeDrawerFn() {
    drawer.classList.remove('open');
    backdrop.classList.remove('open');
    setTimeout(() => {
      drawer.classList.add('hidden');
      backdrop.classList.add('hidden');
    }, 300); // Match CSS transition time
  }

  triggers.forEach(btn => {
    btn.addEventListener('click', (e) => openDrawer(e.target.dataset));
  });

  closeBtn.addEventListener('click', closeDrawerFn);
  backdrop.addEventListener('click', closeDrawerFn);
</script>

<style>
  /* Backdrop (dark background) */
  .backdrop {
    position: fixed;
    top: 0; left: 0; width: 100%; height: 100%;
    background: rgba(0,0,0,0.5);
    z-index: 998;
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  /* The drawer panel */
  .drawer {
    position: fixed;
    bottom: 0; left: 0; width: 100%;
    background: white;
    z-index: 999;
    border-top-left-radius: 20px;
    border-top-right-radius: 20px;
    box-shadow: 0 -5px 20px rgba(0,0,0,0.15);
    padding: 20px;
    transform: translateY(100%);
    transition: transform 0.3s cubic-bezier(0.2, 0.8, 0.2, 1);
    max-height: 50vh;
    overflow-y: auto;
  }

  /* Active classes */
  .backdrop.open { opacity: 1; }
  .drawer.open { transform: translateY(0); }
  .hidden { display: none; }

  /* Content styling */
  .drawer-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 15px;
    border-bottom: 1px solid #eee;
    padding-bottom: 10px;
  }
  .drawer-title {
    font-weight: bold;
    text-transform: uppercase;
    font-size: 0.8rem;
    color: #888;
  }
  #close-drawer {
    background: none; border: none; font-size: 1.5rem; cursor: pointer;
  }
  .external-link {
    display: inline-block;
    margin-top: 10px;
    color: var(--color-accent, #3b82f6);
    font-weight: bold;
    text-decoration: none;
  }
  .external-link:hover {
    text-decoration: underline;
  }
</style>
