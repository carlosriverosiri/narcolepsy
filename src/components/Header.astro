---
// src/components/Header.astro
import { getLangFromUrl, useTranslations, getLocalizedPath, languages, type Lang } from "../i18n";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

// Navigation items
const navItems = [
  { key: 'hypothesis', href: '/hypothesis/' },
  { key: 'gangliosides', href: '/science/gangliosides/' },
  { key: 'genetics', href: '/science/genetics/' },
  { key: 'evidence', href: '/evidence/' },
  { key: 'references', href: '/references/' },
  { key: 'about', href: '/about/' },
];
---

<header class="bg-slate-900 text-white sticky top-0 z-50 shadow-lg">
  <nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <a href={getLocalizedPath('/', lang)} class="flex items-center gap-3 hover:opacity-90 transition-opacity">
        <div class="w-10 h-10 bg-gradient-to-br from-blue-500 to-emerald-500 rounded-lg flex items-center justify-center">
          <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z" />
          </svg>
        </div>
        <span class="font-bold text-lg hidden sm:block">{t.site.title}</span>
      </a>

      <!-- Desktop Navigation -->
      <div class="hidden lg:flex items-center gap-6">
        {navItems.map(item => (
          <a 
            href={getLocalizedPath(item.href, lang)}
            class="text-slate-300 hover:text-white transition-colors text-sm font-medium"
          >
            {t.nav[item.key as keyof typeof t.nav]}
          </a>
        ))}
      </div>

      <!-- Language Selector & Mobile Menu Button -->
      <div class="flex items-center gap-4">
        <!-- Language Dropdown -->
        <div class="relative" x-data="{ open: false }">
          <button 
            @click="open = !open"
            class="flex items-center gap-2 text-slate-300 hover:text-white transition-colors text-sm"
          >
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" />
            </svg>
            <span class="hidden sm:inline">{t.language.current}</span>
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7" />
            </svg>
          </button>
          
          <div 
            x-show="open" 
            @click.away="open = false"
            x-transition:enter="transition ease-out duration-100"
            x-transition:enter-start="transform opacity-0 scale-95"
            x-transition:enter-end="transform opacity-100 scale-100"
            x-transition:leave="transition ease-in duration-75"
            x-transition:leave-start="transform opacity-100 scale-100"
            x-transition:leave-end="transform opacity-0 scale-95"
            class="absolute right-0 mt-2 w-48 bg-white rounded-lg shadow-xl py-2 z-50"
            style="display: none;"
          >
            {Object.entries(languages).map(([code, name]) => (
              <a 
                href={getLocalizedPath(Astro.url.pathname.replace(/^\/(sv|de|fr|es|it|nl|pl|pt|ar)(\/|$)/, '/'), code as Lang)}
                class:list={[
                  "block px-4 py-2 text-sm transition-colors",
                  code === lang 
                    ? "bg-slate-100 text-slate-900 font-medium" 
                    : "text-slate-700 hover:bg-slate-50"
                ]}
              >
                {name}
              </a>
            ))}
          </div>
        </div>

        <!-- Mobile Menu Button -->
        <button 
          class="lg:hidden p-2 rounded-lg hover:bg-slate-800 transition-colors"
          x-data
          @click="$dispatch('toggle-mobile-menu')"
          aria-label="Toggle menu"
        >
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Mobile Navigation -->
    <div 
      x-data="{ open: false }"
      @toggle-mobile-menu.window="open = !open"
      x-show="open"
      x-transition:enter="transition ease-out duration-200"
      x-transition:enter-start="opacity-0 -translate-y-2"
      x-transition:enter-end="opacity-100 translate-y-0"
      x-transition:leave="transition ease-in duration-150"
      x-transition:leave-start="opacity-100 translate-y-0"
      x-transition:leave-end="opacity-0 -translate-y-2"
      class="lg:hidden pb-4 border-t border-slate-800 mt-4"
      style="display: none;"
    >
      <div class="flex flex-col gap-2 pt-4">
        {navItems.map(item => (
          <a 
            href={getLocalizedPath(item.href, lang)}
            class="text-slate-300 hover:text-white hover:bg-slate-800 px-3 py-2 rounded-lg transition-colors text-sm font-medium"
          >
            {t.nav[item.key as keyof typeof t.nav]}
          </a>
        ))}
      </div>
    </div>
  </nav>
</header>
