---
// src/components/Footer.astro
import { getLangFromUrl, useTranslations, getLocalizedPath } from "../i18n";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<footer class="bg-slate-900 text-slate-400 mt-auto">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      
      <!-- About -->
      <div>
        <h3 class="text-white font-bold text-lg mb-4">{t.site.title}</h3>
        <p class="text-sm leading-relaxed">
          {t.site.description}
        </p>
      </div>
      
      <!-- Quick Links -->
      <div>
        <h3 class="text-white font-bold text-lg mb-4">{t.nav.science}</h3>
        <ul class="space-y-2 text-sm">
          <li>
            <a href={getLocalizedPath('/hypothesis/', lang)} class="hover:text-white transition-colors">
              {t.nav.hypothesis}
            </a>
          </li>
          <li>
            <a href={getLocalizedPath('/science/gangliosides/', lang)} class="hover:text-white transition-colors">
              {t.nav.gangliosides}
            </a>
          </li>
          <li>
            <a href={getLocalizedPath('/science/genetics/', lang)} class="hover:text-white transition-colors">
              {t.nav.genetics}
            </a>
          </li>
          <li>
            <a href={getLocalizedPath('/evidence/', lang)} class="hover:text-white transition-colors">
              {t.nav.evidence}
            </a>
          </li>
        </ul>
      </div>
      
      <!-- Legal -->
      <div>
        <h3 class="text-white font-bold text-lg mb-4">{t.footer.disclaimer.split('.')[0]}</h3>
        <p class="text-sm leading-relaxed mb-4">
          {t.footer.disclaimer}
        </p>
        <a 
          href={getLocalizedPath('/about/', lang)} 
          class="text-blue-400 hover:text-blue-300 transition-colors text-sm"
        >
          {t.nav.about} â†’
        </a>
      </div>
    </div>
    
    <div class="border-t border-slate-800 mt-8 pt-8 flex flex-col sm:flex-row justify-between items-center gap-4">
      <p class="text-sm">{t.footer.copyright}</p>
      <div class="flex items-center gap-4">
        <a href="https://github.com" class="hover:text-white transition-colors" aria-label="GitHub">
          <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
            <path fill-rule="evenodd" d="M12 2C6.477 2 2 6.484 2 12.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0112 6.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.202 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.943.359.309.678.92.678 1.855 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0022 12.017C22 6.484 17.522 2 12 2z" clip-rule="evenodd" />
