---
// src/pages/diseases/index.astro
import BaseLayout from "../../layouts/BaseLayout.astro";
import { useTranslations } from "../../i18n";
import { getCollection } from "astro:content";

const t = useTranslations('en');

// Get all diseases
const allDiseases = await getCollection('diseases', ({ data }) => data.lang === 'en' && !data.draft);

// Group by category
const categories = {
  autoimmune: { 
    title: 'Anti-Ganglioside Antibody Disorders', 
    icon: 'ðŸ”¬',
    color: 'purple',
    description: 'Autoimmune conditions with specific ganglioside antibodies'
  },
  sleep: { 
    title: 'Sleep Disorders', 
    icon: 'ðŸŒ™',
    color: 'indigo',
    description: 'Disorders affecting sleep-wake regulation'
  },
  infectious: { 
    title: 'Post-Infectious Encephalitis', 
    icon: 'ðŸ¦ ',
    color: 'rose',
    description: 'CNS inflammation following infection'
  },
  storage: { 
    title: 'Lysosomal Storage Diseases', 
    icon: 'ðŸ§¬',
    color: 'amber',
    description: 'Ganglioside accumulation disorders'
  },
  neurodegenerative: { 
    title: 'Neurodegenerative', 
    icon: 'ðŸ§ ',
    color: 'slate',
    description: 'Progressive neurological conditions'
  },
  other: { 
    title: 'Other Conditions', 
    icon: 'ðŸ“‹',
    color: 'gray',
    description: 'Related neurological conditions'
  },
};

const diseasesByCategory = Object.entries(categories).map(([key, meta]) => ({
  key,
  ...meta,
  diseases: allDiseases.filter(d => d.data.category === key)
    .sort((a, b) => a.data.title.localeCompare(b.data.title))
})).filter(cat => cat.diseases.length > 0);
---

<BaseLayout 
  title="Diseases & Conditions"
  description="Reference library of neurological conditions related to ganglioside biology."
>
  <!-- Hero -->
  <section class="bg-gradient-to-b from-slate-900 to-slate-800 text-white py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <nav class="text-sm text-slate-400 mb-4">
        <a href="/" class="hover:text-white transition-colors">Home</a>
        <span class="mx-2">/</span>
        <span class="text-white">Diseases</span>
      </nav>
      <h1 class="text-4xl md:text-5xl font-bold mb-4">Diseases & Conditions</h1>
      <p class="text-xl text-slate-300 max-w-3xl">
        A reference library of neurological conditions related to ganglioside biology, 
        anti-ganglioside antibodies, and the hypothesis.
      </p>
    </div>
  </section>

  <!-- Quick Stats -->
  <section class="py-8 bg-white border-b">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-wrap gap-6 justify-center text-center">
        <div class="px-6">
          <div class="text-3xl font-bold text-slate-900">{allDiseases.length}</div>
          <div class="text-sm text-slate-500">Conditions</div>
        </div>
        <div class="px-6">
          <div class="text-3xl font-bold text-purple-600">
            {allDiseases.filter(d => d.data.category === 'autoimmune').length}
          </div>
          <div class="text-sm text-slate-500">Autoimmune</div>
        </div>
        <div class="px-6">
          <div class="text-3xl font-bold text-indigo-600">
            {allDiseases.filter(d => d.data.gangliosides && d.data.gangliosides.length > 0).length}
          </div>
          <div class="text-sm text-slate-500">With Ganglioside Links</div>
        </div>
      </div>
    </div>
  </section>

  <!-- Diseases by Category -->
  <section class="py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      {diseasesByCategory.map(category => (
        <div class="mb-12">
          <div class="flex items-center gap-3 mb-6">
            <span class="text-3xl">{category.icon}</span>
            <div>
              <h2 class="text-2xl font-bold text-slate-900">{category.title}</h2>
              <p class="text-slate-500 text-sm">{category.description}</p>
            </div>
          </div>
          
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            {category.diseases.map(disease => (
              <a 
                href={`/diseases/${disease.slug}/`}
                class="group block bg-white rounded-xl shadow-sm border border-slate-200 hover:shadow-lg hover:border-slate-300 transition-all overflow-hidden"
              >
                <div class="p-6">
                  <h3 class="text-lg font-bold text-slate-900 group-hover:text-blue-600 transition-colors mb-2">
                    {disease.data.title}
                  </h3>
                  <p class="text-slate-600 text-sm mb-4 line-clamp-2">
                    {disease.data.description}
                  </p>
                  
                  {/* Ganglioside tags */}
                  {disease.data.gangliosides && disease.data.gangliosides.length > 0 && (
                    <div class="flex flex-wrap gap-2 mb-3">
                      {disease.data.gangliosides.map(g => (
                        <span class="text-xs font-mono bg-red-50 text-red-700 px-2 py-1 rounded-full border border-red-200">
                          {g.toUpperCase()}
                        </span>
                      ))}
                    </div>
                  )}
                  
                  {/* Antibody tags */}
                  {disease.data.antibodies && disease.data.antibodies.length > 0 && (
                    <div class="flex flex-wrap gap-2">
                      {disease.data.antibodies.slice(0, 2).map(ab => (
                        <span class="text-xs bg-purple-50 text-purple-700 px-2 py-1 rounded-full border border-purple-200">
                          {ab}
                        </span>
                      ))}
                    </div>
                  )}
                </div>
                
                <div class="px-6 py-3 bg-slate-50 border-t border-slate-100 flex items-center justify-between">
                  <span class="text-xs text-slate-500">
                    {disease.data.icd10 && `ICD-10: ${disease.data.icd10}`}
                  </span>
                  <span class="text-blue-600 text-sm font-medium group-hover:translate-x-1 transition-transform inline-flex items-center gap-1">
                    Details
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                    </svg>
                  </span>
                </div>
              </a>
            ))}
          </div>
        </div>
      ))}
      
      {diseasesByCategory.length === 0 && (
        <div class="text-center py-16 bg-slate-50 rounded-xl">
          <div class="text-4xl mb-4">ðŸ“š</div>
          <h3 class="text-xl font-bold text-slate-700 mb-2">Disease Library Coming Soon</h3>
          <p class="text-slate-500">We're building a comprehensive reference library. Check back soon!</p>
        </div>
      )}
    </div>
  </section>

  <!-- Link to Ganglioside Map -->
  <section class="py-12 bg-gradient-to-r from-purple-50 to-blue-50 border-t">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h3 class="text-xl font-bold text-slate-900 mb-3">
        Visualize Ganglioside-Disease Relationships
      </h3>
      <p class="text-slate-600 mb-6">
        See all diseases mapped onto the ganglioside biosynthesis pathway.
      </p>
      <a 
        href="/science/gangliosides/?view=autoimmune" 
        class="inline-flex items-center gap-2 bg-purple-600 text-white px-6 py-3 rounded-lg font-medium hover:bg-purple-700 transition-colors"
      >
        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
        </svg>
        Open Ganglioside Map (Autoimmune View)
      </a>
    </div>
  </section>
</BaseLayout>
